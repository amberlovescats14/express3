<h1 class="text-center mb-3">{{title}}</h1>

<form action="/api/fruits" method="POST" class="mb-4">
<div class="form-group">
  <label for="name">Name: </label>
  <input type="text" name="name" class="form-control">
</div>
<div class="form-group">
  <label for="url">Image URL: </label>
  <input type="text" name="url" class="form-control">
</div>
<input type="submit" value="Add Fruit" class="btn btn-danger btn-block">
</form>


<h4>{{subTitle}}</h4>
  <button class="btn btn-primary" data-toggle="collapse" data-target="#amber">
   Show Images +/-
  </button>
<ul class="list-group">
  {{#each fruits}}
  <li class="list-group-item">
    <h2>{{this.name}}</h2>
      <div class="collapse" id="amber">
        <img src={{this.url}} alt={{this.name}} class="img-thumbnail" 
        style="height: 60px; width: 60px">
      </div>
  </li>
  {{/each}}
</ul>



